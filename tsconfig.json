{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "tsconfig-paths/register": [
        "node_modules/tsconfig-paths/register.js"
      ]
    }
  }
}
